<!doctype html>
<html lang="ja">

<head>
    <meta http-equiv="content-type" charset="UTF-8">
    <title>Ety-Book</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/common.css?ver=1.0.2' />
    <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery.tablesorter/2.31.0/js/jquery.tablesorter.min.js"></script>
    <link rel="icon" href="/images/favicon.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">

    <script>
        $(document).ready(function() {
            $('#fav-table').tablesorter();
        });
    </script>
</head>

<body class="pt-5">
    <%- include('partials/header') %>
        <div class="container pt-5">
            <div class="text-end">
                <button type="button" class="btn btn-primary btnx-purpule btn-lg bi bi-search icon-status my-3" style="border-radius: 50%;" data-bs-toggle="modal" data-bs-target="#searchModal"></button>
            </div>
            <table id="fav-table" class="table table-bordered table-hover text-center">
                <thead class="thead-dark">
                    <tr class="table table-dark table-striped">
                        <th class="bg-purpule" style="width: 25%">単語↕</th>
                        <th style="width: 25%">語源↕</th>
                        <th style="width: 25%">語源↕</th>
                        <th style="width: 25%">語源↕</th>
                    </tr>
                </thead>
                <tbody>
                    <% items.forEach((item) => { %>
                        <tr>
                            <td class="fw-bold table-secondary">
                                <a href="/word/<%= item.mainword %>">
                                    <%= item.mainword ? item.mainword :null%>
                                </a>
                            </td>
                            <td class="bg-white">
                                <a href="/etymology/<%= item.etymology01 %>">
                                    <%= item.etymology01 ? item.etymology01 :null%>
                                </a>
                            </td>
                            <td class="bg-white">
                                <a href="/etymology/<%= item.etymology02 %>">
                                    <%= item.etymology02 ? item.etymology02 :null%>
                                </a>
                            </td>
                            <td class="bg-white">
                                <a href="/etymology/<%= item.etymology03 %>">
                                    <%= item.etymology03 ? item.etymology03 :null%>
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                </tbody>
            </table>

        </div>
        </div>

        <!-- モーダル -->
        <div class="modal fade" id="searchModal" tabindex="-1" aria-labelledby="searchModalLabel" aria-hidden="true">
            <div class="modal-dialog  modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="閉じる"></button>
                    </div>
                    <form method="POST" action="/home">
                        <div class="modal-body">
                            <input type="text" id="searchInput" name="searchWord" class="form-control border border-dark border-1" placeholder="検索文字列を入力してください">
                        </div>

                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary btnx-purpule btn-lg" id="searchButton" style="flex: 1;">検索</button>
                        </div>

                    </form>


                </div>
            </div>
        </div>


        <%- include('partials/footer') %>