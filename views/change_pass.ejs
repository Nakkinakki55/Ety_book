<!doctype html>
<html lang="ja">

<head>
    <meta http-equiv="content-type" charset="UTF-8">
    <title>Ety-Book</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/common.css?ver=1.0.2' />
    <link rel="icon" href="/images/favicon.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
</head>

<body>

    <%- include('partials/header') %>
        <div class="container text-center pt-5">
            <div class="row justify-content-center mt-5">
                <div class="col-md-8">
                    <% if (locals.message != 'パスワードの更新成功！！！') { %>
                        <form action="/change_pass" method="POST" onsubmit="">
                            <div class="form-group row">
                                <p class="bg-purpule text-white text-center">現在のパスワード</p>
                                <div class="col-md-12">
                                    <input type="password" id="passwordNow" name="passwordNow" class="form-control border border-dark  border-1" placeholder="現在のパスワード" maxlength="100" required>
                                </div>
                            </div>

                            <div class="form-group row mt-4">
                                <p class="bg-dark text-white text-center">変更用パスワード</p>
                                <div class="col-md-12">
                                    <input type="password" id="newpass" name="newpass" class="form-control border border-dark  border-1" placeholder="8文字以上、小文字と大文字と数字が1文字" maxlength="100" required>
                                </div>
                            </div>

                            <div class="form-group row mt-4">
                                <p class="bg-dark text-white text-center">変更用パスワード(確認用)</p>
                                <div class="col-md-12">
                                    <input type="password" id="newpassconf" name="newpassconf" class="form-control border border-dark  border-1" placeholder="8文字以上、小文字と大文字と数字が1文字" maxlength="100" required>
                                </div>
                            </div>
                            <p class="text-danger">
                                <%= message %>
                            </p>

                            <div class="row mt-5">
                                <div class="col text-center">
                                    <button class="btn btn-secondary btnx-purpule col-5 bi bi-icon-2 bi-upload icon-status" type="submit"></button>
                        </form>
                        <a href="/home" class="btn btn-dark col-5 bi bi-icon-2 bi-house-door-fill icon-status"></a>
                        </div>
                        </div>


                        <% } else { %>
                            <h5 class="mt-4">
                                <%= message %>
                            </h5>
                            <div class="row mt-5">
                                <div class="col">
                                    <a href="/home" class="btn btn-secondary btnx-purpule col-5 bi bi-icon-2 bi-house-door-fill"></a>
                                </div>
                            </div>
                            <% } %>
                </div>
                <!-- div class="col-md-8 " -->
            </div>
            <!-- div class="row justify-content-center " -->
        </div>

        <%- include('partials/footer') %>