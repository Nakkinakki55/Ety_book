<!doctype html>
<html lang="ja">

<head>
    <meta http-equiv="content-type" charset="UTF-8">
    <title>Ety-Book 新規会員登録</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/common.css?ver=1.0.2' />
    <link rel="stylesheet" href="/stylesheets/signin.css">
    <link rel="icon" href="/images/favicon.png">
    <link rel="apple-touch-icon" sizes="180x180" href="/images/apple-touch-icon.png">
</head>

<body class="text-center">
    <div class="container">
        <% if (locals.message != 'パスワードの変更が完了しました！') { %>
            <form action="/forgetchangepass" method="POST" class="form-signin">

                <a href="/login">
                    <img src="/images/hero-img.png" alt="" height="150">
                </a>
                <h3>パスワード更新</h3>
                <label for="password" class="mt-2">パスワード</label>
                <input type="hidden" name="password_reset_token" value="<%= locals.password_reset_token ? password_reset_token :null%>">
                <input type="password" id="password" name="password" value="<%= locals.password ? password :null%>" class="form-control border border-dark border-1" placeholder="8文字以上" required>
                <label for="passConf" class="mt-2">パスワード確認</label>
                <input type="password" id="passConf" name="passConf" value="<%= locals.passConf ? passConf :null%>" class="form-control border border-dark border-1" placeholder="8文字以上" required>


                <div class="main">
                    <% if(typeof message !== 'undefined' && message && message.length > 0) { %>
                        <!-- <div class="message"> -->
                        <p class="text-danger">
                            <%= message %>
                        </p>
                        <!-- </div> -->
                        <% } %>
                </div>

                <input class="btn btn-secondary btnx-purpule btn-lg btn-block mt-4" type="submit" value="送信">
            </form>
            <% } else { %>
                <h3 class="mt-4">
                    <%= message %>
                </h3>

                <% } %>
                    <a href="/login">ログインはこちらへ</a>
                    <p class="mt-5 mb-3 text-muted">&copy; Ety-book 2022</p>
    </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.js" integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=" crossorigin=" anonymous"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/birth.js"></script>
</body>

</html>